pipeline {
    agent {
	docker {image 'node:16-alpine'}
    }

    stages {
        stage('Test') {
            steps {
                sh 'node --version'
                sh 'export HOME=/tmp'
                sh 'npm config set cache /tmp'
                sh 'cd /var/lib/jenkins/workspace/'
                sh 'npm install'
                
            }
        }
    }
}

