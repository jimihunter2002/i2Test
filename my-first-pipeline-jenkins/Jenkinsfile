pipeline {
    agent {
	docker {image 'node:16-alpine'}
    }

    stages {
        stage('Test') {
            steps {
                sh 'node --version'
                sh 'echo $USER'
                sh 'whoami'                
                sh 'mkdir -p ~/.npm-global'
                sh ''
                sh 'npm config set prefix "~/.npm-global"'
                sh 'echo export PATH=~/.npm-global/bin:$PATH >> ~/.profile'
                sh 'source ~/.profile'
                sh 'cd /var/lib/jenkins/workspace/'
                sh 'npm install'
                
            }
        }
    }
}

